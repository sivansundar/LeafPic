<resources>

    <style name="AboutCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/developer_card_spacing</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/greycliff_medium</item>
    </style>


    <style name="ToolBarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
